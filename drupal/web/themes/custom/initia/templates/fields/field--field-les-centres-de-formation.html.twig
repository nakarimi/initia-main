{% if items|length %}
  {% for item in items %}
    <span class="child-{{ loop.index }} child-no-margin">
      <div class="d-flex justify-content-start mb-4 align-items-center">
        <div>
          <svg width=" 48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="24" cy="24" r="24" fill="#96AE41" fill-opacity="0.1" />
            <path d="M14.6667 25.333L19.3686 29.0945C20.4717 29.977 22.0716 29.8461 23.0166 28.7961L33.3334 17.333" stroke="#96AE41" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <div class="ms-3 m-0 ">
          {{ item.content }}
        </div>
      </div>
    </span>
  {% endfor %}
{% endif %}

<style>
  .child-no-margin p{
    margin: 0px;
  }
</style>
