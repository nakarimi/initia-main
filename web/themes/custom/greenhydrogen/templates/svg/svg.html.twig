{% set extra_class = (extra_class is not empty ? ' ' ~ extra_class : '') %}
{% if directory is empty %}
  {% set directory = 'themes/custom/greenhydrogen' %}
{% endif %}

{% if base_path == '/' %}
  {% set base_path = '' %}
{% endif %}

<svg class="o-svg o-svg--{{ svg|e('html_attr') }}{{ extra_class }}">
  <use class="o-svg__use" xlink:href="/{{ base_path ~ directory }}/assets/img/symbol/svg/sprite.symbol.svg?v=11#{{ svg|e('html_attr') }}"/>
</svg>
